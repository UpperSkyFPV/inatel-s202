#left-dock {
    dock: left;
    width: 30%;
}

.bordered-loading-indicator {
    border: $primary;
}

NewPostWidget {
    border: white;
    padding: 0 1;
}

NewPostWidget TextArea {
    height: 5;
    margin: 1 1;
}

NewPostWidget Button {
    width: 100%;
}

PostWidget {
    border: white;
}

PostWidget .title {
    padding-left: 1;
    align: left top;
    text-style: bold;
}

PostWidget Horizontal {
    width: 100%;
    height: 2;
}

PostWidget .author {
    padding-right: 1;
    align: right top;
    text-align: right;
    text-style: italic;
}

PostWidget .like_container {
    layout: horizontal;
    height: auto;
    width: 100%;
    align: right middle;
}

