FollowingWidget {
    border: $primary;
}

FollowingWidget .info_center {
    color: $secondary;
    text-align: center;
}

FollowingUserWidget {
    layout: grid;
    grid-size: 2 1;

    border: white;
    padding: 0 1;
}

FollowingUserWidget LoadingIndicator {
    align: right middle;
}

FollowingUserWidget .username {
    text-style: bold;
}

FollowingUserWidget .followers {
    text-align: right;
}
